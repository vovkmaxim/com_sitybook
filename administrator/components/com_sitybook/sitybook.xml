<extension type="component" version="2.5.0" method="upgrade">
    <name>COM_SITYBOOK</name>
    <creationDate>2013-01-31</creationDate>
    <author>Spark</author>
    <authorEmail>info [at] sparkbuilt.com</authorEmail>
    <authorUrl>http://lendr.sparkbuilt.com</authorUrl>
    <copyright>Copyright Info</copyright>
    <license>License Info</license>
    <version>1.0.0</version>
    <description>COM_SITYBOOK_DESCRIPTION</description>

    <install>
  	<sql>
  	<file charset="utf8" driver="mysql">install.mysql.sql</file>
  	</sql>
    </install>

    <files folder="site">
        <folder>assets</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>languages</folder>
        <folder>models</folder>
        <folder>tables</folder>
        <folder>views</folder>
        <filename>index.html</filename>
        <filename>sitybook.php</filename>
        <filename>router.php</filename>
    </files>

    <scriptfile>install.php</scriptfile>

    <languages folder="site">
	<language tag="en-GB">languages/en-GB/en-GB.com_sitybook.ini</language>
    </languages>

    <administration>
        <menu link="option=com_sitybook" img="components/com_sitybook/assets/images/sitybook_icon.png">COM_SITYBOOK</menu>

        <submenu>
           <menu view="settings" img="components/com_sitybook/assets/images/settings_icon.png"
           alt="SITYBOOK/Settings">COM_SITYBOOK_SETTINGS</menu>
        </submenu>

    <files folder="admin">
        <folder>controllers</folder>
        <folder>languages</folder>
        <folder>models</folder>
        <folder>views</folder>
        <filename>sitybook.php</filename>
        <filename>index.html</filename>
        <filename>install.mysql.sql</filename>
    </files>     

    <languages folder="admin">
        <language tag="en-GB">languages/en-GB/en-GB.com_sitybook.ini</language>
        <language tag="en-GB">languages/en-GB/en-GB.com_sitybook.sys.ini</language>
    </languages>

    </administration>
</extension>
